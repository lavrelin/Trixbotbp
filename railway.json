{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "envVars": {
    "TG_BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection URL",
      "required": true
    },
    "TARGET_CHANNEL_ID": {
      "description": "Target channel ID for publications",
      "default": "-1002743668534"
    },
    "MODERATION_GROUP_ID": {
      "description": "Moderation group ID",
      "default": "-1002734837434"
    },
    "CHAT_FOR_ADS": {
      "description": "Chat for promotional messages",
      "default": "https://t.me/tgchatxxx"
    },
    "ADMIN_IDS": {
      "description": "Comma-separated admin Telegram IDs",
      "required": true
    },
    "MODERATOR_IDS": {
      "description": "Comma-separated moderator Telegram IDs",
      "required": false
    },
    "COOLDOWN_SECONDS": {
      "description": "Cooldown between posts in seconds",
      "default": "5666"
    },
    "SCHEDULER_ENABLED": {
      "description": "Enable scheduler on start",
      "default": "false"
    }
  }
}
